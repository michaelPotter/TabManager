{
	"manifest_version": 2,

	"name": "Tab Manager",
	"description": "A simple tab manager",
	"version": "1.0.3",
	"icons": {
		"48": "icon.png",
		"96": "icon.png",
		"192": "icon.png"
	},

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "dist/popup.html"
	},

	"background": {
		"scripts": [
			"js/util.js",
			"js/Badge.js",
			"js/Window.js",
			"js/background.js"
		],
		"persistent": false
	},

	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/",
		"tabs",
		"storage",
		"bookmarks"
	]
}
